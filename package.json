{
  "name": "msme-invoice-financing",
  "version": "1.0.0",
  "description": "Decentralized invoice financing marketplace for MSMEs",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy.js --network sepolia",
    "node": "npx hardhat node",
    "frontend": "cd frontend && npx live-server --port=3000",
    "backend": "cd backend && node server.js",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "clean": "npx hardhat clean",
    "reset": "npx hardhat clean && rm -rf frontend/contract-addresses.json && rm -rf artifacts cache"
  },
  "keywords": [
    "blockchain",
    "defi",
    "invoice-financing",
    "rwa",
    "nft"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "hardhat": "^2.22.0",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.6",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.16.0",
    "express": "^4.22.1",
    "ipfs-http-client": "^56.0.3",
    "mongoose": "^7.8.8",
    "multer": "^1.4.5-lts.1",
    "web3": "^1.10.4"
  }
}
